{
  "env": {
    "node": true,
    "jest": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "plugins": ["react-hooks"],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "react/prop-types": "off",
    "semi": "off",
    "react-hooks/exhaustive-deps": "off",
    "no-unused-expressions": "off"
  }
}

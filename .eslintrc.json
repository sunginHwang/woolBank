{
  "env": {
    "node": true,
    "jest": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "semi": "off",
    "react-hooks/exhaustive-deps": "off"
  }
}

